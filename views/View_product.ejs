
<%-include('header')%>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">View Type</h4>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Category </th>
                          <th>SubCategory </th>
                          <th>ExtraCategory </th>
                          <th>Brand </th>
                          <th>Type </th>
                          <th>Product</th>
                          <th>Image</th>
                          <th>Multi Image</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <form>
                          <label for="inputPassword2" class="sr-only">Search</label>
                          <input type="search" class="form-control" id="inputPassword2" placeholder="Search..." name="search" value="<%=searchValue%>">
                          <button type="submit" title="Click here to search" value="search" style="border: none; background-color: transparent;
                              transform: translateX(-30px); font-size: 16px; color: #6c757d;"><i class="fe-search"></i>
                          </button>
                        </form>
                        <% if(productData !="" ){ %>
                            <% for(var pd of productData ){ %>
                        <tr>
                          <td><%=pd.category%></td>
                          <td><%=pd.subcategory.scateName%></td>
                          <td><%=pd.extracategory.ecateName%></td>
                          <td><%=pd.brandname.brandname%></td>
                          <td><%=pd.typeName.typeName %></td>
                          <td><%=pd.product_name %></td>
                          <td><img src="<%=pd.ProductImage %>" height="40" alt=""></td>
                        <td>
                            <%for(var i = 0; i<=pd.multipleproductimage.length;i++){%>
                                <img src="<%=pd.multipleproductimage[i] %>" height="40" alt="" onclick="return deleteimg('<%=pd.id%>','<%=i%>','<%=pd.multipleproductimage[i] %>')">
                            <%}%>
                        </td>

                          <%if(ad.isActive){%>
                            <td><a href="/admin/product/isActive/<%=ad.id%>" title="IsActive"  class="badge rounded-pill bg-label-primary me-1" style="border-radius: 45%;">Active</i></a></td>
                            <%} else{%>
                                <td><a href="/admin/product/deActive/<%=ad.id%>" title="DeActive"  class="badge rounded-pill bg-label-danger me-1" style="border-radius: 45%;">DeActive</a></td>
                            <%}%>

                          <td>
                            <a class="dropdown-item" href="/admin/product/updateProduct/<%=ad.id%>"><i class="mdi mdi-border-color me-1"></i>Edit</a>
                            <a class="dropdown-item" href="/admin/product/deleteProduct/<%=ad.id%>"><i class="mdi mdi-delete me-1"></i> Delete</a>
                          </td>
                          
                        </tr>
                        <%}} else{%>
                          <div style="background-color: #fff !important; text-align: center; display: flex; justify-content: center; align-items: center; width: 100%; height: 70px;" >
                              <h4 style="color: #6c757d;">No Record Found</h4>
                          </div>
                      <%}%>

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-12">
            <ul class="pagination pagination-rounded justify-content-end mb-3">
                <li class="page-item">
                    <% var prevPage = parseInt(currentPage)-1%>
                    <% if(prevPage>=0){%>
                        <a class="page-link" href="?page=<%=prevPage%>" aria-label="Previous">
                            <span aria-hidden="true">«</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    <%}%>
                </li>
                <%for (var i=0; i<totaldocument; i++){%>
                    <li class="page-item <%if(currentPage==i){%> <%='active'%> <%}%>"><a class="page-link" href="?page=<%=i%>&search=<%=searchValue%>"><%=i+1%></a></li>
                <%}%>
                <% var nextPage = parseInt(currentPage)+1%>
                <li class="page-item">
                    <% if (totaldocument>nextPage){%>
                        <a class="page-link" href="?page=<%=nextPage%>" aria-label="Next">
                            <span aria-hidden="true">»</span>
                            <span class="sr-only">Next</span>
                        </a>
                    <%}%>
                    </li>
            </ul>
        </div> <!-- end col-->
    </div>
        <!-- content-wrapper ends -->
        
<%-include('footer')%>